@using FinanceDashboard.Web.Data.Entities

<div class="card h-100">
    <div class="card-header d-flex justify-content-between align-items-center">
        <h5 class="mb-0">?? Recent Transactions</h5>
        <a href="/transactions" class="btn btn-sm btn-outline-primary">View All</a>
    </div>
    <div class="card-body p-0">
        @if (Transactions == null || !Transactions.Any())
        {
            <div class="text-center py-4 text-muted">
                <p class="mb-0">No transactions yet.</p>
                <a href="/transactions" class="btn btn-primary btn-sm mt-2">Add Transaction</a>
            </div>
        }
        else
        {
            <div class="list-group list-group-flush">
                @foreach (var transaction in Transactions)
                {
                    <div class="list-group-item d-flex justify-content-between align-items-center">
                        <div>
                            <div class="fw-medium">
                                @transaction.Category?.Icon @transaction.Category?.Name
                            </div>
                            <small class="text-muted">@transaction.Date.ToString("MMM dd")</small>
                        </div>
                        <span class="@(transaction.Type == TransactionType.Income ? "text-success" : "text-danger") fw-bold">
                            @(transaction.Type == TransactionType.Income ? "+" : "-")$@transaction.Amount.ToString("N2")
                        </span>
                    </div>
                }
            </div>
        }
    </div>
</div>

@code {
    [Parameter] public List<Transaction>? Transactions { get; set; }
}
